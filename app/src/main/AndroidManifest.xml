<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whiterabbitt.whiterabbitt" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!--
  IMPORTANT: Change "com.parse.starter.permission.C2D_MESSAGE" in the lines below
  to match your app's package name + ".permission.C2D_MESSAGE".
    -->
    <permission
        android:name="com.whiterabbitt.whiterabbitt.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.whiterabbitt.whiterabbitt.permission.C2D_MESSAGE" />

    <application
        android:name="com.whiterabbitt.whiterabbitt.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/wr_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD762UnZWK5bInepIpYnXdP1pPEL2t4iF4" />

        <activity
            android:name="com.whiterabbitt.whiterabbitt.IndexActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbit.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.CreateAccountActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.CREATE_ACCOUNT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.CreateEventActivity"
            android:label="@string/title_activity_create_event"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whiterabbitt.whiterabbitt.MainActivity" />

            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.CREATE_EVENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.MapActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.ACTIVITY_MAP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.SelectInviteeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.SELECT_INVITEE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.RespondInvitationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.RESPOND_INVITATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.RewardWinnerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.REWARD_WINNER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.RewardLoserActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.REWARD_LOSER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whiterabbitt.whiterabbitt.MainActivity" />
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.ContactActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/NoActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whiterabbitt.whiterabbitt.MainActivity" />
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.EventDetailActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whiterabbitt.whiterabbitt.MainActivity" />
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.DonationActivity"
            android:label="@string/title_activity_donation" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whiterabbitt.whiterabbitt.MainActivity" />
        </activity>
        <activity
            android:name="com.whiterabbitt.whiterabbitt.DonationSuccessActivity"
            android:label="@string/title_activity_donation_success" >
        </activity>

        <service android:name="com.whiterabbitt.whiterabbitt.GeofenceActivity" />
        <service android:name="com.whiterabbitt.whiterabbitt.GeofenceTransitionsIntentService" />
        <service android:name="com.whiterabbitt.whiterabbitt.RewardPreparationService" />
        <service android:name="com.parse.PushService" />
        <service android:name="com.whiterabbitt.whiterabbitt.ThirtyMinNotificationService" />

        <receiver android:name="com.parse.ParseBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.parse.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <!-- IMPORTANT: Change "com.parse.tutorials.pushnotifications" to match your app's package name. -->
                <category android:name="com.whiterabbitt.whiterabbitt" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.whiterabbitt.whiterabbitt.PushReceiveActivity"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.parse.push.intent.RECEIVE" />
                <action android:name="com.parse.push.intent.DELETE" />
                <action android:name="com.parse.push.intent.OPEN" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.whiterabbitt.whiterabbitt.OnPushHandlingBroadcastReceiver">
            <intent-filter>
                <action android:name="com.whiterabbitt.whiterabbitt.NOTIFICATION_CLICKED" />
                <action android:name="com.whiterabbitt.whiterabbitt.NOTIFICATION_DISMISSED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.parse.push.notification_icon"
            android:resource="@mipmap/wr_logo" />
    </application>

</manifest>
